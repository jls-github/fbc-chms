<%= form_with(model: team_member, class: "contents") do |form| %>
  <% if team_member.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(team_member.errors.count, "error") %> prohibited this team_member from being saved:</h2>

      <ul class="list-disc ml-6">
        <% team_member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :team_id, "Team" %>
    <%= form.collection_select :team_id, Team.order(:name), :id, :name, { prompt: "Select a team" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": team_member.errors[:team_id].none?, "border-red-400 focus:outline-red-600": team_member.errors[:team_id].any? }] %>
  </div>

  <div class="my-5">
    <%= form.label :member_id, "Member" %>
    <%= form.collection_select :member_id, Member.order(:first_name), :id, :first_name, { prompt: "Select a member" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": team_member.errors[:member_id].none?, "border-red-400 focus:outline-red-600": team_member.errors[:member_id].any? }] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.number_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": team_member.errors[:status].none?, "border-red-400 focus:outline-red-600": team_member.errors[:status].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
