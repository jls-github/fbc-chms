<div id="<%= dom_id family %>" class="w-full sm:w-auto my-5">
  <div class="card flex flex-col h-full">
    <div class="card-title"><%= family.name %></div>

  <div class="flow-y flex-1 min-h-0">
      <div>
        <strong class="block font-medium mb-1">Members</strong>
        <ul id="family-members-<%= family.id %>" class="list-disc pl-5">
          <% family.members.order(:last_name, :first_name).each do |m| %>
            <li class="text-sm text-gray-700"><%= m.full_name %></li>
          <% end %>
        </ul>
      </div>
      <div>
    </div>
    <% if local_assigns[:show_actions] %>
      <div class="mt-4 flex flex-wrap items-center space-x-2">
        <%= link_to "Show", family, class: "text-sm rounded-md px-3 py-1 bg-gray-100 hover:bg-gray-50 font-medium" %>
        <%= link_to "Edit", edit_family_path(family), class: "text-sm rounded-md px-3 py-1 bg-gray-100 hover:bg-gray-50 font-medium" %>
        <%= button_to "Destroy", family, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-sm rounded-md px-3 py-1 text-white bg-red-600 hover:bg-red-500 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
