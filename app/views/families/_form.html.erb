<%= form_with(model: family) do |form| %>
  <% if family.errors.any? %>
    <div style="color: red" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(family.errors.count, "error") %> prohibited this family from being saved:</h2>

      <ul>
        <% family.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": family.errors[:name].none?, "border-red-400 focus:outline-red-600": family.errors[:name].any?}] %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
