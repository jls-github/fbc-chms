<div id="<%= dom_id group %>" class="w-full sm:w-auto my-5">
  <div class="card flex flex-col h-full">
    <div class="card-title"><%= group.name %></div>

  <div class="flow-y flex-1 min-h-0">
      <div>
        <strong class="block font-medium mb-1">Meeting time</strong>
        <div class="text-sm text-gray-700"><%= group.meeting_time %></div>
      </div>

      <div>
        <strong class="block font-medium mb-1">Meeting location</strong>
        <div class="text-sm text-gray-700"><%= group.meeting_location %></div>
      </div>

      <div>
        <strong class="block font-medium mb-1">Members</strong>
        <ul id="group-members-<%= group.id %>" class="list-disc pl-5">
          <% group.members.each do |m| %>
            <% gm = group.group_members.find_by(member_id: m.id) %>
            <%= render "shared/member_list_item", member: m, membership: gm, remove_path: (gm ? group_member_path(gm) : nil) %>
          <% end %>
        </ul>
      </div>
    </div>
    <% if local_assigns[:show_actions] %>
      <div class="mt-4 flex flex-wrap items-center space-x-2">
        <%= link_to "Show", group, class: "text-sm rounded-md px-3 py-1 bg-gray-100 hover:bg-gray-50 font-medium" %>
        <%= link_to "Edit", edit_group_path(group), class: "text-sm rounded-md px-3 py-1 bg-gray-100 hover:bg-gray-50 font-medium" %>
        <%= button_to "Destroy", group, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-sm rounded-md px-3 py-1 text-white bg-red-600 hover:bg-red-500 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
